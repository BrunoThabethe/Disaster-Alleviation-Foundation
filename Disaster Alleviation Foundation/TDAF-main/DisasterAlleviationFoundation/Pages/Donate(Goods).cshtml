@page
@model DisasterAlleviationFoundation.Pages.Donate_Goods_Model
@{
}<div>
</div>
<div class='alert-warning alert-dismissible fade show' role="alert">
    <strong>@Model.Message</strong>
    <button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='close'></button>
</div>
<!-- form-->
<div style="background: linear-gradient(120deg, rgba(242,101,34,1) 35%, rgba(235,0,255,1) 100%); text-align:center ">
    <h4>Please enter the following information.</h4>
    <div class=" py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong " style="border-radius: 1rem; background: hsla(0, 0%, 100%, 0.3); backdrop-filter: blur(30px); ">
                    <div class="card-body p-5 text-center">
                        <span class="mb-5" style="font-size: 33px; color: white;"><strong>Donate</strong></span>
                        <form method="post">
                            <!--Description-->
                            <div class="form-outline mb-4">
                                <label class="form-label">Description</label>
                                <input type="text" style="text-align:center" name="Description" placeholder="Enter a description" class="form-control form-control-lg" />
                            </div>
                            <!--Number of items-->
                            <div class="form-outline mb-4">
                                <label class="form-label">Number of donated items</label>
                                <input type="number" style="text-align:center" name="NumItems" placeholder="1-100" class="form-control form-control-lg" />
                            </div>
                            <!--Create category-->
                            
                                <label class="col-sm-6 col-form-label">Select Category</label>
                                <div class="col-sm-12">
                                    <select class="form-control" style="text-align:center" name="theSelection">
                                        @for (int i = 0; i < Model.categoriesFrmDB.Count; i++)
                                        {
                                            <option value="@Model.categoriesFrmDB[i]">@Model.categoriesFrmDB[i]</option>
                                        }
                                    </select>

                                </div>
                            
                            
                                <!--Anonymous-->
                                <label class="col-sm-12 col-form-label">Would You like to be Anonymous?</label>
                                <div class="col-sm-12">
                                    <select class="form-control" style="text-align:center" name="theSelection">
                                        <option value="Yes">Make me anonymous</option>
                                        <option value="No">You can Mention my name</option>
                                    </select>

                                </div>
                                <div class="text-center pt-1 mb-2 pb-1">
                                    <input type="hidden" name="categ" value="done" />
                                    <button class="btn btn-primary" style="width:300px; margin-top:20px" type="submit">
                                        Donate
                                    </button>

                                </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3>Existing donations</h3>
    <div>
        <div class="page-content page-container" id="page-content">
            <div class="padding">
                <div class="row container d-flex justify-content-center">
                    <div class="container col-lg-12 grid-margin stretch-card">
                        <div class="card" style="border-radius: 1rem; background: hsla(0, 0%, 100%, 0.4); backdrop-filter: blur(40px); ">
                            <div class="card-body">
                                <h4 class="card-title" style="text-align:center">Monetary Donations</h4>
                                <p class="card-description" style="text-align:center">
                                    The following table lists all our clients which were generous enough to donate funds towards our foundation.
                                </p>
                                <div class="table-responsive">

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Donation ID</th>
                                                <th>Date</th>
                                                <th>Description</th>
                                                <th>Number of Items</th>
                                                <th>Category</th>
                                                <th>Donor</th>
                                            </tr>

                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.goodsLis)
                                            {
                                                <tr>
                                                    <th>@item.DonationID</th>
                                                    <th>@item.DonationDate</th>
                                                    <th>@item.GoodsDescription</th>
                                                    <th>@item.NumberOfItems</th>
                                                    <th>@item.Category</th>
                                                    <th>@item.Username</th>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                                <h3>Total Amount of Items : @Model.totalResources</h3>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

