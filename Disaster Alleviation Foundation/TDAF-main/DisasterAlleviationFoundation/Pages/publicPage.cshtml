@page
@model DisasterAlleviationFoundation.Pages.publicPageModel
@{
}
<h3>Existing donations</h3>
<div>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="container col-lg-12 grid-margin stretch-card">
                    <div class="card" style="border-radius: 1rem; background: hsla(0, 0%, 100%, 0.4); backdrop-filter: blur(40px); ">
                        <div class="card-body">
                            <h4 class="card-title" style="text-align:center">Monetary Donations</h4>
                            <p class="card-description" style="text-align:center">
                                The following table lists all our clients which were generous enough to donate funds towards our foundation.
                            </p>
                            <div class="table-responsive">

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Donation ID</th>
                                            <th>Date</th>
                                            <th>Amount (R)</th>
                                            <th>Donor</th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                      

                                    </tbody>
                                </table>
                            </div>
                            <h3>Total Amount of funds : R @Model.totalFunds</h3>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>